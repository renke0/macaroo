# Create setup backup of setup file by moving it and appending ".backup" to its name
backup() {
  local target=$1
  if [ -e "$target" ]; then
    if [ ! -L "$target" ]; then
      mv "$target" "$target.backup"
    fi
  fi
}

# Create setup symlink of setup file
symlink() {
  local file=$1
  local link=$2
  if [ -L "$link" ]; then
    unlink "$link"
  fi
  if [ ! -e "$link" ]; then
    ln -s "$file" "$link"
  fi
}
